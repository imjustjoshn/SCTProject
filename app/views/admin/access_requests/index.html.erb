<h1>Access Requests</h1>
<table>
    <thead>
        <tr>
            <th>User</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @access_requests.each do |access_request| %>
            <tr>
                <td><%= access_request.user.email %></td>
                <td><%= access_request.status %></td>
                <td>
                    <%= link_to 'Approve', admin_access_request_path(access_request), method: :patch %>
                    <%= link_to 'Deny', admin_access_request_path(access_request), method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
